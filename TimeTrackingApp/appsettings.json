{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TimeTrackingApp;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "TaskAlertThreshold": 120, // 長時間同一業務継続としてアラートを表示する閾値(分)
    "ReminderInterval": 60, // リマインダー通知の間隔(分)
    "DataRetentionPeriod": 730 // データ保持期間(日)
  }
}
